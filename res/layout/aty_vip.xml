<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/im_vip">
    
    <LinearLayout
        android:gravity="center" 
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp" />

        <LinearLayout
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="您的可用积分"
                android:textColor="@color/black"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/txt_score"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:gravity="center" 
        		android:layout_gravity="center"
                android:textColor="@color/green"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="130dp" >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="130dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/img_gift1"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:background="@drawable/ic_no" />

                    <TextView
                        android:id="@+id/txt_gift1"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center" 
        				android:layout_gravity="center"
                        android:text="暂无商品"
                        android:textColor="@color/green"
                        android:textSize="7sp" />

                    <Button
                        android:id="@+id/get_gift1"
                        android:layout_width="match_parent"
                        android:layout_height="23dp"
                        android:background="@color/black"
                        android:text="点  击  兑  换"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="130dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/img_gift2"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:background="@drawable/ic_no" />

                    <TextView
                        android:id="@+id/txt_gift2"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center" 
        				android:layout_gravity="center"
                        android:text="暂无商品"
                        android:textColor="@color/green"
                        android:textSize="7sp" />

                    <Button
                        android:id="@+id/get_gift2"
                        android:layout_width="match_parent"
                        android:layout_height="23dp"
                        android:background="@color/black"
                        android:text="点  击  兑  换"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="130dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/img_gift3"
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:background="@drawable/ic_no" />

                    <TextView
                        android:id="@+id/txt_gift3"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center" 
        				android:layout_gravity="center"
                        android:text="暂无商品"
                        android:textColor="@color/green"
                        android:textSize="7sp" />

                    <Button
                        android:id="@+id/get_gift3"
                        android:layout_width="match_parent"
                        android:layout_height="23dp"
                        android:background="@color/black"
                        android:text="点  击  兑  换"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>
	
</FrameLayout>